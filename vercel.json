{
  "version": 2,
  "alias": ["bibliotheque-cameroun"],
  "regions": ["iad1"],
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",


  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  // Headers gérés par middleware.ts
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "crons": []
}
